include sections

doctype html
html(lang='en')
  head
    meta(name='description' content='an illustrated guide to Ranjani Chakraborty')
    meta(name='author' content='Ranjani Chakraborty')
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width,initial-scale=1')
    link(href='bundle.css' rel='stylesheet')
    title ranj chak dot com
    
  body
    h1#title
      img(src=title.image alt=title.text).title-image
      #subtitle  
        img(src=subtitle.image alt=subtitle.text).title-image

    #reel-container
      iframe#reel(
        src='//player.vimeo.com/video/' + reel.vimeoId
        frameborder="0"
        badge='0' byline='0' portrait='0' title='0'
        webkitallowfullscreen mozallowfullscreen allowfullscreen)

      //- video(controls)#reel
      //-   source(src=reel.mp4 type="video/mp4")
      //-   source(src=reel.webm type="video/webm")

    #nav-container
      nav#nav
        #page-links.nav-links
          each sect in sections
            a(href='#' + sect.id title=sect.nav.title).nav-link
              img(
                src=sect.nav.icon
                data-hover-src=sect.nav.hover
                alt=sect.title.text + ' ' + sect.sub.text).nav-link-icon
              img(src=sect.nav.image alt=sect.nav.text).nav-link-title
        
        #social-links.nav-links
          each social in socials
            - var link = social.link
            - var target = (/^mailto/.test(link)) ? '' : '_blank'
            a(href=link target=target title=social.name).social-link
              img(src=social.icon alt=social.name).social-link-icon
              
    .sections
      each sect in sections
        +section(sect)
    
    footer#footer
      p#copyright.footer-text Copyright 2016 by Ranjani Chakraborty
      p#built-by.footer-text
        a(href='http://cousins.io' target='_blank') Built by Mike Cousins
    
    script(src='bundle.js')
